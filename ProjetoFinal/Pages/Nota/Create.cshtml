@page
@model ProjetoFinal.Pages.Nota.Create

<h1>Adicionar Notas</h1>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-dange"></div>
        <input type="hidden" asp-for="NotaModel.NotaID"/>
        <div class="form-group">
            <label for="aluno">Aluno:</label>
            <select class="form-control" id="aluno" name="aluno">
                @foreach (var alunoModel in Model.AlunoList!)
                {
                    <option value="@alunoModel.AlunoID">@alunoModel.Nome</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="NotaModel.Prova1"></label>
            <input asp-for="NotaModel.Prova1" class="form-control" placeholder="Nota da prova 1" required/>
            <span asp-validation-for="NotaModel.Prova1" class="text-danger"></span>
        </div>
    </form>
</div>