@page
@model ProjetoFinal.Pages.Nota.Index

<h1 class="display-4">Notas dos Alunos</h1>

<hr>
<td><a asp-page="/Nota/Create">Adicionar nota de aluno</a></td>
<hr>

<div>
    <table class="table table-bordered table-striped table-hover-custom">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.NotaList[0].NotaID)</td>
                <td>@Html.DisplayNameFor(model => model.NotaList[0].Prova1)</td>
                <td>@Html.DisplayNameFor(model => model.NotaList[0].Prova2)</td>
                <td>@Html.DisplayNameFor(model => model.NotaList[0].Trabalho)</td>
                <td>@Html.DisplayNameFor(model => model.NotaList[0].Atividade)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var notaModel in Model.NotaList)
            {
                <tr>
                    <td>@Html.DisplayFor(model => notaModel.NotaID)</td>
                    <td>@Html.DisplayFor(model => notaModel.Prova1)</td>
                    <td>@Html.DisplayFor(model => notaModel.Prova2)</td>
                    <td>@Html.DisplayFor(model => notaModel.Trabalho)</td>
                    <td>@Html.DisplayFor(model => notaModel.Atividade)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@notaModel.NotaID">Editar</a>
                        <a asp-page="./Delete" asp-route-id="@notaModel.NotaID">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>    
</div>